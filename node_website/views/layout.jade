    script(type='text/javascript', src='//use.typekit.net/wnz0zph.js')
    script(type='text/javascript') try{Typekit.load();}catch(e){}
    link(href='http://fonts.googleapis.com/css?family=PT+Sans:400,700italic', rel='stylesheet', type='text/css')
    
  body
    nav.top-bar.hide-for-small
      ul.title-area
        li.name
          a(href="/")
            img(src='img/teselagen_toplogo.png')
        li.toggle-topbar
      section.top-bar-section
        ul.right
          li#home_tab
            a.active_top_menu(href='/') Home
          li#about_tab
            a(href='/about') About
          li#faq_tab
            a(href='/faq') FAQ
          li#news_tab
            a(href='/news') News
          li#blog_tab
            a(href='http://blog.teselagen.com/') Blog
          li#contact_tab
            a(href='/contact') Contact  
          li.signup_btn
            a(href='/signup') Sign Up
          li.login_btn
            a(href='http://app.teselagen.com/'') Login
    
    block container

    #footer
        .large-12.small-12#footer_links
          nav.top-bar
            section.top-bar-section
              ul.right
                li
                  a(href='/careers', target='blank') Careers
                li
                  a(href='http://help.teselagen.com', target='_blank') Manual
                li
                  a(href='/terms') Terms
                li
                  a(href='/privacy', target='_blank') Privacy          
                li
                  a.social-footer-link(href='https://www.facebook.com/Teselagen', target='_blank')
                    img(src='img/icons/img-footer-facebook.png')
                li
                  a.social-footer-link(href='https://twitter.com/teselagen', target='_blank')
                    img(src='img/icons/img-footer-twitter.png')
                li
                  a.social-footer-link(href='http://www.linkedin.com/company/2838822', target='_blank')
                    img(src='img/icons/img-footer-linkedin.png')

    block scripts
      // le javascripts
      script(src='/js/jquery-1.10.2.min.js')
      script(src='/js/application.js')
      script(src='/js/foundation.min.js')
