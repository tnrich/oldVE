.span8
    .span7.well
      h1 Edit Account
      br
      form.form-horizontal#edit-account(action="/profile/me/update",method="POST")
          fieldset
              input(type='hidden',name="user[_id]")
              .control-group
                label.control-label(for='user[firstName]') First Name
                .controls
                  input.input-xlarge(type='text',name="user[firstName]")
              .control-group
                label.control-label(for='user[lastName]') Last Name
                .controls
                  input.input-xlarge(type='text',name="user[lastName]")
              .control-group
                label.control-label(for='user[email]') Email
                .controls
                  input.input-xlarge(type='text',name="user[email]")
              .form-actions
                button#save.btn.btn-primary(type='submit', data-complete-text="saved!") Save changes
                button.btn Cancel
.span3
    include dashboard_menu